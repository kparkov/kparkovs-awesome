#!/bin/bash

OS="$1"
GITREPO="https://github.com/kparkov/kparkovs-awesome.git"
LOCALTEMP="${TMPDIR}/kparkovs-awesome"
INSTALLBINDIR"${LOCALTEMP}/dotfiles/"

if [[ "$OS" != "win" && "$OS" != "mac" ]]; then
    echo "Please supply OS to update (win or mac)."
    exit 1
fi

if [ ! -d "$TMPDIR" ]; then
    echo "No temp dir resolved. Exiting."
    exit 1
fi

git clone $GITREPO $LOCALTEMP
cd $INSTALLBINDIR && ./install $OS